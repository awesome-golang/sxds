{
  "version": "1.0",

  "listeners": [
    {
      "name": "listener1",
      "address": {
        "socket_address": {
          "address": "127.0.0.1",
          "port_value": 10000
        }
      },
      "filter_chains": [
        {
          "filters": [
            {
              "name": "envoy.http_connection_manager",
              "config": {
                "http_filters": [
                  {
                    "name": "envoy.router"
                  }
                ],
                "rds": {
                  "config_source": {
                    "api_config_source": {
                      "api_type": "GRPC",
                      "grpc_services": [
                        {
                          "envoy_grpc": {
                            "cluster_name": "xds_cluster"
                          }
                        }
                      ]
                    }
                  },
                  "route_config_name": "local_route"
                },
                "stat_prefix": "ingress_http",
                "tracing": {}
              }
            }
          ]
        }
      ],
      "listener_filters": [],
      "socket_options": []
    }
  ],

  "clusters": [
    {
      "name": "cluster1",
      "lb_policy": "ROUND_ROBIN",
      "type": "EDS",
      "eds_cluster_config": {
        "eds_config": {
          "api_config_source": {
            "api_type": "GRPC",
            "grpc_services": [
              {
                "envoy_grpc": {
                  "cluster_name": "xds_cluster"
                }
              }
            ]
          }
        }
      },
      "connect_timeout": "1s"
    }
  ],

  "endpoints": [
    {
      "cluster_name": "cluster1",
      "endpoints": [
        {
          "lb_endpoints": [
            {
              "endpoint": {
                "address": {
                  "socket_address": {
                    "address": "127.0.0.1",
                    "port_value": 10000
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ],

  "routes": [
    {
      "name": "route1",
      "virtual_hosts": [
        {
          "name": "virtual_host1",
          "domains": [
            "*"
          ],
          "routes": [
            {
              "match": {
                "prefix": "/"
              }
            }
          ]
        }
      ]
    }
  ]
}
